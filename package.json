{
  "name": "yks-quiz",
  "version": "1.0.0",
  "description": "YKS Quiz Uygulaması - Türkiye'nin en kapsamlı YKS hazırlık platformu",
  "private": true,
  "author": "YKS Quiz Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@types/node": "^16.18.0",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.7",
    "canvas-confetti": "^1.9.3",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prebuild": "echo 'Skipping type-check for now'",
    "postbuild": "echo 'Build completed successfully!'",
    "deploy:staging": "npm run build:prod && echo 'Staging deployment ready'",
    "deploy:production": "npm run build:prod && echo 'Production deployment ready'",
    "db:upload-csv": "node scripts/database/csv-to-firebase.js",
    "db:delete-questions": "node scripts/database/delete-questions.js",
    "db:fix-daily-activity": "node scripts/database/fix-daily-activity-decimals-admin.js",
    "db:fix-session-time": "node scripts/database/fix-session-time-location.js",
    "db:fix-session-times": "node scripts/database/fixSessionTimes.js",
    "db:validate-csv": "node scripts/database/validate-csv.js",
    "deploy:quick": "bash scripts/deployment/quick-deploy.sh",
    "deploy:full": "bash scripts/deployment/deploy.sh",
    "health:check": "bash scripts/maintenance/health-check.sh",
    "dev:setup": "node scripts/dev/setup-dev.js",
    "test:run": "node scripts/test/run-tests.js",
    "utils:sitemap": "node scripts/utils/generate-sitemap.js",
    "utils:analyze-bundle": "node scripts/utils/analyze-bundle.js",
    "utils:check-deps": "node scripts/utils/check-dependencies.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "eslint": "^8.0.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^2.0.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}

{
  "appId": "com.yksquiz.app",
  "appName": "YKSQuiz",
  "webDir": "build",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": [
      "localhost:*",
      "*.firebaseapp.com",
      "*.firestore.googleapis.com"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "backgroundColor": "#667eea",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP"
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "android": {
    "backgroundColor": "#667eea"
  }
} 